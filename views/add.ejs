<% include ./partials/header.ejs %>

<div class="w-full h-screen bg-zinc-800">
    <h1 class="text-white">Create your new post</h1>
    <hr class="bg-zinc-200 text-white w-1/5">
    <form action="/createpost" method="post" enctype="multipart/form-data" class="pt-5 px-10">
        <input class="block py-2  w-2/6 mt-2 text-white" type="file" name="postimage">
        <input class="block py-2 border w-2/6 mt-2 px-3 rounded" type="text" name="title" placeholder="Title">
        <input class="block py-2 border w-2/6 mt-2 px-3 rounded" type="text" name="description" placeholder="Description">
        <input class="block py-2 w-2/6 mt-2 bg-red-500 text-white rounded-full capitalize font-md" type="submit" value="submit your post">
    </form>
</div>

