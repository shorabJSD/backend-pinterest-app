<% include ./partials/header.ejs %>

    <div class="w-full min-h-screen bg-zinc-800 pt-1">
        <div class="profdets text-white items-center flex-col flex">
            <form class="hidden" id="uploadform" action="/fileupload" method="post" enctype="multipart/form-data">
                <input type="file" name="image" id="">
            </form>
            <div class="relative">
                <span id="uploadicon" class="pointer  w-10 h-10 absolute bg-zinc-300 bottom-0 right-0 rounded-full text-black items-center flex justify-center text-lg">
                    <i class="ri-pencil-fill"></i>
                </span>
                <div class="w-32 h-32 bg-zinc-400 mt-20 rounded-full mb-2 overflow-hidden flex items-center justify-center">
                    <img class="w-full h-full object-cover" src="./images/uploads/<%= user.profileImage %>" alt="">
                </div>
            </div>
            <h1 class="capitalize font-semibold"><%= user.fullname%></h1>
            <h3>@<%= user.username %></h3>
            <h3>Backend Software engineer</h3>
            <a href="/edit" class="bg-zinc-400 px-6 py-1 rounded-full my-2 text-black">edit</a>
            <a href="/add" class="py-2 px-10 bg-red-500 inline-block rounded-full text-white capitalize">add new post</a>
        </div>
        <div class="cards mx-10 my-5 flex flex-wrap gap-10">
            <div class="cards-details">
                <div class="card-img w-52 h-52 rounded-md overflow-hidden">
                    <img src="<%= user.image %>"
                        class=" w-full h-full object-cover" alt="...">
                </div>
                <div class="card-des pt-3 text-white">
                    <h1>All pins</h1>
                    <h4>28pins</h4>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
  document.querySelector("#uploadicon").addEventListener("click", ()=>{
    document.querySelector("#uploadform input").click();
  })
  document.querySelector("#uploadform input").addEventListener("change", ()=>{
    document.querySelector("#uploadform").submit();
  })
</script>

